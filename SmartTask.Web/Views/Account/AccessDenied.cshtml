@{
    ViewData["Title"] = "Access Denied";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-danger">Access Denied</h1>
    <p class="lead">You do not have permission to access this resource.</p>

    @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
    {
        <p>You were trying to access: @ViewBag.ReturnUrl</p>
    }

    <hr />
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Home</a>
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary ml-2">Login with Different Account</a>
    </div>
</div>