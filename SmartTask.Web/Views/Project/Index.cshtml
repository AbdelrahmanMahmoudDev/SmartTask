@{
    ViewData["Title"] = "Projects";
}

<div class="container-fluid py-4">
    <div class="page-header">
        <h1 class="h3 mb-0">
            <i class="fas fa-project-diagram text-primary me-2"></i> Projects Management
        </h1>

        <secure-content asp-area="" asp-controller="Project" asp-action="Create">
            <a asp-action="Create" class="btn btn-create">
                <i class="fas fa-plus-circle me-2"></i> Create New
            </a>
        </secure-content>
    </div>

    @* apply filter *@

    <div class="card">
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-filter me-2"></i>Advanced Filter
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3 align-items-end">
                    <!-- أضف align-items-end هنا -->
                    <div class="col-md-2">
                        <label class="form-label">Project Name</label>
                        <input type="text" id="filterName" class="form-control" placeholder="Filter by name...">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Owner</label>
                        <input type="text" id="filterOwner" class="form-control" placeholder="Filter by owner...">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Status</label>
                        <select id="filterStatus" class="form-select">
                            <option value="">All Statuses</option>
                            <option value="Active">Active</option>
                            <option value="Pending">Pending</option>
                            <option value="Completed">Completed</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Date Range</label>
                        <input type="text" id="filterDateRange" class="form-control" placeholder="Select date range...">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <!-- استخدم d-flex و align-items-end -->
                        <button id="btnResetFilter" class="btn btn-outline-secondary w-100">
                            <!-- أضف w-100 -->
                            <i class="fas fa-undo me-1"></i> Reset
                        </button>
                    </div>
                </div>
            </div>
        </div>

    <div class="card">
        <div class="card-body">
            <table id="projectsTable" class="table table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th><i class="fas fa-signature me-2"></i>Name</th>
                        <th><i class="fas fa-user-tie me-2"></i>Owner</th>
                        <th><i class="fas fa-flag-checkered me-2"></i>Start Date</th>
                        <th><i class="fas fa-calendar-day me-2"></i>End Date</th>
                        <th><i class="fas fa-tasks me-2"></i>Status</th>
                        <th><i class="fas fa-cogs me-2"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model.Projects)
                    {
                        <tr>
                            <td>
                                <i class="fas fa-folder-open text-warning me-2"></i>
                                @project.Name
                            </td>
                            <td>@project.Owner?.FullName</td>
                            <td class="date-cell">@project.StartDate?.ToString("dd MMM yyyy")</td>
                            <td class="date-cell">@project.EndDate?.ToString("dd MMM yyyy")</td>
                            <td>
                                <span class="badge @GetStatusBadge(project.Status)">
                                    <i class="@GetStatusIcon(project.Status) me-1"></i>
                                    @project.Status
                                </span>
                            </td>
                            <td>
                                <div class="action-icons">
                                    <secure-content asp-area="" asp-controller="Project" asp-action="Details">
                                        <a asp-action="Details" asp-route-id="@project.Id"
                                           class="btn btn-sm btn-outline-primary btn-action"
                                           title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </secure-content>

                                    <secure-content asp-area="" asp-controller="Project" asp-action="Edit">
                                        <a asp-action="Edit" asp-route-id="@project.Id"
                                           class="btn btn-sm btn-outline-success btn-action"
                                           title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </secure-content>

                                    <secure-content asp-area="" asp-controller="Project" asp-action="Delete">
                                        <a asp-action="Delete" asp-route-id="@project.Id"
                                           class="btn btn-sm btn-outline-danger btn-action"
                                           title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this project?')">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </secure-content>

                                    <secure-content asp-area="" asp-controller="Project" asp-action="AssignUser">
                                        <a asp-action="AssignUser" asp-route-projectId="@project.Id"
                                           class="btn btn-sm btn-outline-info btn-action"
                                           title="Assign User">
                                            <i class="fas fa-user-plus"></i>
                                        </a>
                                    </secure-content>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadge(string status)
    {
        return status switch
        {
            "Active" => "bg-success",
            "Pending" => "bg-warning",
            "Completed" => "bg-primary",
            _ => "bg-secondary"
        };
    }

    string GetStatusIcon(string status)
    {
        return status switch
        {
            "Active" => "fas fa-check-circle",
            "Pending" => "fas fa-clock",
            "Completed" => "fas fa-flag-checkered",
            _ => "fas fa-question-circle"
        };
    }
}





@section Scripts {
    <!-- jQuery  -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!--   DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/daterangepicker@3.1.0/daterangepicker.min.js"></script>






<script>
                $(document).ready(function() {
                // Initialize date range picker
                $('#filterDateRange').daterangepicker({
                    autoUpdateInput: false,
                    locale: {
                        cancelLabel: 'Clear',
                        format: 'DD/MM/YYYY'
                    }
                });

                // Handle date range apply event
                $('#filterDateRange').on('apply.daterangepicker', function(ev, picker) {
                    $(this).val(picker.startDate.format('DD/MM/YYYY') + ' - ' + picker.endDate.format('DD/MM/YYYY'));
                    applyFilters(); // Call applyFilters directly here
                });

                $('#filterDateRange').on('cancel.daterangepicker', function(ev, picker) {
                    $(this).val('');
                    applyFilters(); // Call applyFilters directly here
                });

                 var table = $('#projectsTable').DataTable({
                dom: '<"top"<"row"<"col-md-6"l><"col-md-6"f>>>rt<"bottom"<"row"<"col-md-6"i><"col-md-6"p>>><"clear">',
                responsive: true,
                buttons: [
                    {
                        extend: 'excel',
                        text: '<i class="fas fa-file-excel me-2"></i> Export to Excel',
                        className: 'btn btn-sm',
                        title: 'Projects_List'
                    }

                ],
                language: {
                    search: '<i class="fas fa-search me-2"></i>',
                    searchPlaceholder: "Search projects...",
                    lengthMenu: "Show _MENU_ projects",
                    info: "Showing _START_ to _END_ of _TOTAL_ projects",
                    infoEmpty: "No projects available",
                    infoFiltered: "(filtered from _MAX_ total projects)",
                    paginate: {
                        first: '<i class="fas fa-angle-double-left"></i>',
                        last: '<i class="fas fa-angle-double-right"></i>',
                        next: '<i class="fas fa-angle-right"></i>',
                        previous: '<i class="fas fa-angle-left"></i>'
                    }
                },
                initComplete: function() {
                    $('.dataTables_length select').addClass('form-select');
                    $('.dataTables_filter input').addClass('form-control');
                    $('.dt-buttons').addClass('mb-3');

                    $('.dataTables_length label').css('font-size', '16px');
                    $('.dataTables_filter label').css('font-size', '16px');
                }
            });

                // Apply filters on typing
                $('#filterName, #filterOwner').on('keyup', function() {
                    applyFilters();
                });

                // Apply filters on select change
                $('#filterStatus').on('change', function() {
                    applyFilters();
                });

                // Apply all filters function
                function applyFilters() {
                    // Clear any previous date filters
                    $.fn.dataTable.ext.search.pop();

                    // Apply column filters
                    table.columns(0).search($('#filterName').val().trim());
                    table.columns(1).search($('#filterOwner').val().trim());
                    table.columns(4).search($('#filterStatus').val().trim());

                    // Date range filtering
                    var dateRange = $('#filterDateRange').val();
                    if (dateRange) {
                        var dates = dateRange.split(' - ');
                        if (dates.length === 2) {
                            var startDate = moment(dates[0], 'DD/MM/YYYY');
                            var endDate = moment(dates[1], 'DD/MM/YYYY');

                            if (startDate.isValid() && endDate.isValid()) {
                                // Add custom filter function for date range
                                $.fn.dataTable.ext.search.push(
                                    function(settings, data, dataIndex) {
                                        var rowStartDate = moment(data[2], 'DD MMM YYYY');
                                        var rowEndDate = moment(data[3], 'DD MMM YYYY');

                                        if (!rowStartDate.isValid() || !rowEndDate.isValid()) {
                                            return false;
                                        }

                                        return (rowStartDate.isSameOrAfter(startDate) && rowStartDate.isSameOrBefore(endDate)) ||
                                               (rowEndDate.isSameOrAfter(startDate) && rowEndDate.isSameOrBefore(endDate)) ||
                                               (rowStartDate.isSameOrBefore(startDate) && rowEndDate.isSameOrAfter(endDate));
                                    }
                                );
                            }
                        }
                    }

                    // Redraw the table to apply filters
                    table.draw();
                }

                // Reset all filters
                $('#btnResetFilter').click(function() {
                    $('#filterName').val('');
                    $('#filterOwner').val('');
                    $('#filterStatus').val('');
                    $('#filterDateRange').val('');

                    // Clear all filters
                    table.columns().search('');
                    $.fn.dataTable.ext.search.pop();
                    table.draw();
                });
            });
</script>
}